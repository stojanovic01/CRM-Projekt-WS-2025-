# CRM-Anwendung - Umgebungskonfiguration
# Kopieren Sie diese Datei zu .env und passen Sie die Werte an

# Flask-Einstellungen
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=CHANGE_ME_TO_A_SECURE_RANDOM_STRING

# Datenbank - MySQL auf PythonAnywhere
# Ersetzen Sie CHANGE_ME durch Ihre tatsächlichen Werte
SQLALCHEMY_DATABASE_URI=mysql+pymysql://USER:PASSWORD@HOST/DATABASE?charset=utf8mb4

# Alternativ - für lokale SQLite (nicht empfohlen für Produktion)
# SQLALCHEMY_DATABASE_URI=sqlite:///app.db

# Zeitzone
TIMEZONE=Europe/Vienna

# Sicherheitseinstellungen
SQLALCHEMY_TRACK_MODIFICATIONS=False
